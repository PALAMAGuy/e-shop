{% extends 'base.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}

    <div class="container-fluid" id="mainFrame">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-8 mainFrame">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><i class="fa-solid fa-house"></i> Nos marques</li>
                </ol>
            </div>
            <div class="col-2" style="text-align:center">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_marque_new') }}"><button type="button" class="btn btn-outline-primary">Ajouter une marque</button></a>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-8 mainFrame" style="background-color:white">
                <div class="row">
                    <div class="col-2">
                    </div>
                    <div class="col-8">
                        <p class="textLeftMenu">TOUTES NOS MARQUES</p>
                    </div>
                    <div class="col-2">
                    </div>
                </div>
                <table class="table">
                    <tbody>
                    {% for marque in marques %}
                        <tr>
                            <td><a href="{{ path('app_marque_show', {'id': marque.id}) }}">{{ marque.name }}</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-2">
            </div>
        </div>
    </div>

{% endblock %}
