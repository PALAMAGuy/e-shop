{% extends 'base.html.twig' %}

{% block title %}TypeProduit{% endblock %}

{% block body %}

    
    <div class="container-fluid" id="mainFrame">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-8 mainFrame">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><i class="fa-solid fa-house"></i> <a class="disabled-link" href="{{ path('app_groupe_produit_show', {'id': type_produit.groupe.id}) }}">{{ type_produit.groupe }}</a></li>
                    <li class="breadcrumb-item active">{{ type_produit.name }}</li>
                </ol>
            </div>
            <div class="col-2" style="text-align:center">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_categorie_produit_new') }}"><button type="button" class="btn btn-outline-primary">Ajouter</button></a>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-8 mainFrame" style="background-color:white">
                <div class="row">
                    <div class="col-2">
                    </div>
                    <div class="col-8">
                        <p class="textLeftMenu">Nos cat√©gorie {{ type_produit.name }}</p>
                    </div>
                    <div class="col-2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                             {% for categorie_produit in categorie_produits %}
                                <div class="col-4" style="margin-bottom:20px;">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="col-12" style="border:3px solid rgb(225,225,225)">
                                                <div class="row">
                                                    <div class="col-4">
                                                        <img src="/images/categories/{{ categorie_produit.img }}" width="auto" height="80px" style="margin-top:20px;margin-bottom:20px">
                                                    </div>
                                                    <div class="col-8">
                                                        <a class="disabled-link" href="{{ path('app_categorie_produit_show', {'id': categorie_produit.id}) }}"><p style="font-weight:800;margin-top:40px;font-size:18px;color">{{ categorie_produit.name }}</p></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                no records found
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
            </div>
        </div>
    </div>

